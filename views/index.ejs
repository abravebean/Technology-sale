<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/header.ejs") %>
<head>
  <link rel="stylesheet" href="/css/style.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Electronics</title>
</head>
<body>
    <nav> 
      <a href="/product" class="nav">Choose Your Tech</a> <span class="nav"> | </span>
      <a href= "/product/new">Customize Product</a>
  

    </nav>
    <!-- Display Products -->
    <div class="flexcontainer">
      <ul>
        <% for (let i=0; i<product.length; i++) { %>
          <li>
            <a href="/product/<%=product[i].id%>"></a>
      
            <div class="product-content">
              <%= product[i].name; %><br/>
              <div class="description">
                <%= product[i].description; %><br/>
              </div>
              <img class="indexImg" src="<%=product[i].img%>" alt="<%= product[i].name; %>"></img>
            <br/>
              In Stock: <%= product[i].quantity; %><br/>
              Cost: $<%= product[i].price; %><br/>
             id: <%= product[i].id; %><br/>
            </div>
            <button>
              <a href="/product/<%=product[i].id%>/edit">Edit</a>
          </button>
          </li>
        <% } %>
      </ul>
    </div>
    <!-- Delete -->
 
    <footer> 

    </footer>
</body>
</html>